{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "test solution",
      "type": "shell",
      "command": "bash",
      "args": [
        "run_problem.sh",
        "${input:target}",
        "-t"
      ]
    },
    {
      "label": "compile java",
      "type": "shell",
      "command": "javac",
      "args": [
        "-d",
        "build",
        "${input:target}/${input:target}.java",
      ]
    },
  ],
  "inputs": [
    {
      "id": "target",
      "description": "choose target name",
      "type": "promptString",
      "default": "PROBLEM_NAME"
    }
  ]
}
